 @model IEnumerable<Brand> 

@{
    ViewData["Title"] = "View Brand";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="column col-6">
            <h2 class="text-primary">Brands</h2>
        </div>
        <div class="column col-6 text-end" >
           <a class="btn btn-primary" asp-action="Create" asp-controller="Brand"><i class="bi bi-plus-circle"></i>&nbsp; New Brand</a>
        </div>
    </div>
</div>


<table class="table table-hover">
    
      <thead class="thead-dark table-primary">
          <tr>
            <th scope="col">BrandId</th>
            <th scope="col">BrandName</th>
            <th scope="col" >HeadOffice</th>
            <th scope="col">Action</th>
          </tr>
      </thead>

      <tbody>
          @foreach (var item in Model){
            <tr >
              <th scope="row">@item.BrandId</th>
                <td>@item.BrandName</td>
                <td>@item.HeadOffice</td>
                <td role="group">
                    <input hidden></input>
                    <a asp-action="Edit" asp-controller="Brand" asp-route-id="@item.BrandId"><i class="bi bi-pencil-square"></i></a>
                    &nbsp;&nbsp;
                    <a asp-action="Delete" asp-controller="Brand" asp-route-id="@item.BrandId"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
          }
      </tbody>
    
</table>