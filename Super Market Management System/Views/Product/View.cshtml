      @*@model IEnumerable<Product> *@
@model IEnumerable<Super_Market_Management_System.Models.CategoryProductViewModel>



@{
    ViewData["Title"] = "View Products";
}



<div class="container p-4">
    <div class="row p-3">
        <div class="column col-6">
            <h2 class="text-primary">Products</h2>
        </div>
        <div class="column col-6 text-end" >
           <a class="btn btn-primary" asp-action="Add" asp-controller="Product"><i class="bi bi-plus-circle"></i>&nbsp; New Product</a>
        </div>
    </div>

</div>


<table class="table table-hover">
    
      <thead class="thead-dark table-primary">
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Category</th>
            <th scope="col">Brand</th>
            <th scope="col">Action</th>
          </tr>
      </thead>

      <tbody>
          

          @foreach (var item in Model)
          {
            <tr>
                <th scope="row">@item.ProdId</th>
                  <td>@item.ProdName</td>
                  <td>@item.ProdPrice</td>
                  <td>@item.ProdQuantity &nbsp; <a asp-action="AddQuantity" asp-controller="Product" asp-route-id="@item.ProdId"><i class="bi bi-plus-square"></i></a>  </td> 
                  <td>@item.Name</td>
                  <td>@item.BrandName</td>
                  
                  <td role="group">
                   <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.ProdId"><i class="bi bi-pencil-square"></i></a>
                    &nbsp;&nbsp;
                   <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.ProdId"><i class="bi bi-trash3"></i></a>
                 </td>
                                        
            </tr>
            
          }

          
      </tbody>
    
</table>
