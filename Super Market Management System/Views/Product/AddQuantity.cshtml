
@model Product


@{
    ViewData["Title"] = "Update Quantity";
}

<br />

<h2>Update Products</h2>

&nbsp;&nbsp;

<form method="post" >
  
     <input type="hidden" asp-for="ProdId" />
    
    <div class="form-floating mb-3">
        
        <input disabled type="text" name="txtname" class="form-control" id="floatingInputValue" required >
        <label for="floatingInputValue">@ViewBag.product.ProdName</label>
        <span asp-validation-for="ProdId" class="text-danger"></span>
     
    </div>

    <div class="form-floating mb-3">
        <input type="number" name="txtquan" class="form-control" id="floatingInputValue" placeholder="eg. 5" required >
        <label for="floatingInputValue">Product Quantity</label>
@*        <span asp-validation-for="Prodname" class="text-danger"></span>*@
    </div>



    <div class="col-12">
    <input type="hidden" value=@Model.ProdId name="pid" />
    <button class="btn btn-primary" type="submit">Update</button>
    @Html.AntiForgeryToken()
    </div>
    <br />
    <a  asp-action="View" asp-controller="Product">Back to List</a>

</form>

@section scripts{
    
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}