      @model List<Product>



@{
    ViewData["Title"] = "Cart";

     Layout = null;
}



<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Super_Market_Management_System</title>
    <link rel="stylesheet" href="~/css/VaporbootswatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Super_Market_Management_System.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
</head>
<body>
    
    <header>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        
      <form class="d-flex">
        <input class="form-control me-sm-2" type="text" placeholder="Search">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>


    </header>


    <div class="container" id="parentdiv">
        <main role="main" class="pb-3">
          
            <br>


<!-------here--------->

<div class="container p-4">
    <div class="row p-3">
        <div class="column col-6">
            <h2 class="text-primary">cart Items</h2>
        </div>
        <div class="column col-6 text-end" >
           <a class="btn btn-primary" asp-action="CreateOrder" asp-controller="Order"><i class="bi bi-x-octagon"></i></i>&nbsp; Cancel Order</a>
        </div>
    </div>

</div>


<table class="table table-hover">
    
      <thead class="thead-dark table-primary">
          <tr>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Action</th>
          </tr>
      </thead>

      <tbody>
          

          @foreach (var item in Model)
          {
            <tr>
                  <td>@item.ProdName</td>
                  <td>@item.ProdPrice</td>
                  <td>@item.ProdQuantity</td> 
                  
                  <td role="group">
                   <a asp-action="delete" asp-controller="Order" asp-route-id="@item.ProdId"><i class="bi bi-trash3"></i></a>
                 </td>
                                        
            </tr>
            
          }

          
      </tbody>
    
</table>

<br />

<div>Your total bill is : @ViewBag.Total</div>

<div class="container p-4">
    <div class="row p-3">
        <div class="column col-6 text-end" >
           <a class="btn btn-primary" asp-controller="Order" asp-action="payment"><i class="bi bi-check-circle"></i>&nbsp; Confirm Order</a>
           
        </div>
    </div>

</div>


<!----body ended-->





</script>






        </main>
    </div>


</body>




</html>




