
@model IEnumerable<Cashier>

@{
    ViewData["Title"] = "View Cashier";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="column col-6">
            <h2 class="text-primary">Cashiers</h2>
        </div>
        <div class="column col-6 text-end" >
           <a class="btn btn-primary" asp-action="Create" asp-controller="Cashier"><i class="bi bi-plus-circle"></i>&nbsp; New Cashier</a>
        </div>
    </div>

</div>

<table class="table table-hover">
    <thead class="thead-dark table-primary">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.cashierid</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.created_at</td>
                <td>
                    <a asp-action="Edit" asp-controller="Cashier" asp-route-id="@item.cashierid"><i class="bi bi-pencil-square"></i></a>
                    &nbsp;&nbsp;
                    <a asp-action="Delete" asp-controller="Cashier" asp-route-id="@item.cashierid"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>